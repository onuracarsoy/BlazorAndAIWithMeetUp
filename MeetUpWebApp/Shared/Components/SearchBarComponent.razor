@inject NavigationManager NavigationManager
@inject SharedHelper SharedHelper
<div class="d-flex" role="search">
    <input class="form-control me-2" type="search" placeholder="Ara" aria-label="Search" @bind-value="searchQuery" @bind-value:event="oninput" @onkeydown="HandleKeyPress">
    <button class="btn btn-light" type="button" @onclick="Search">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
        </svg>
    </button>
</div>

@code {

    [Parameter]
    public string? SearchUrl { get; set; }

    private string searchQuery = string.Empty;

    protected override void OnInitialized()
    {
        searchQuery =  SharedHelper.GetQueryParamValue("search");
    }

    private void Search()
    {
        NavigationManager.NavigateTo($"{SearchUrl}?search={searchQuery}",true);
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            
            Search();
        }
    }
}
